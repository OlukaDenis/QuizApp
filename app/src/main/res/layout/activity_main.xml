<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.mcdennylucaz.quiz.MainActivity">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/heading"
                android:textAllCaps="true"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="@dimen/textview_width"
                android:layout_height="@dimen/textview_width"
                android:src="@drawable/exam_maker"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:gravity="center_horizontal"
                android:text="@string/desc"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_person_black_48dp" />

                <EditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/name"
                    android:hint="@string/your_name"
                    android:padding="@dimen/padding_medium"
                    android:inputType="textCapWords"/>
            </LinearLayout>

            <!--Start of question 1-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                android:background="@drawable/question_bg"
                android:orientation="vertical">

                <TextView
                    style="@style/HeaderTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/one" />

                <TextView
                    style="@style/Questions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/question1"
                    android:textSize="@dimen/text_size_medium" />

                <CheckBox
                    android:id="@+id/qn1_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="checkName"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:text="@string/q_a"
                    android:textSize="@dimen/text_size_small" />

                <CheckBox
                    android:id="@+id/qn1_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="checkName"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:text="@string/q_b"
                    android:textSize="@dimen/text_size_small" />

                <CheckBox
                    android:id="@+id/qn1_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="checkName"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:text="@string/q_c"
                    android:textSize="@dimen/text_size_small" />

                <CheckBox
                    android:id="@+id/qn1_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="checkName"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:text="@string/q_d"
                    android:textSize="@dimen/text_size_small" />

            </LinearLayout>


            <!--Start of question 2-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                android:background="@drawable/question_bg"
                android:orientation="vertical">

                <TextView
                    style="@style/HeaderTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/two" />

                <TextView
                    style="@style/Questions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/question2"
                    android:textSize="@dimen/text_size_medium" />

                <CheckBox
                    android:id="@+id/qn2_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="checkName"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:text="@string/q2_a"
                    android:textSize="@dimen/text_size_small" />

                <CheckBox
                    android:id="@+id/qn2_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
