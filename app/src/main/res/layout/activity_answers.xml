<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context="com.mcdennylucaz.quiz.MainActivity">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/heading"
                android:textAllCaps="true"
                android:textColor="@color/text_color"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="@dimen/textview_width"
                android:layout_height="@dimen/textview_width"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/exam_maker" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:gravity="center_horizontal"
                android:text="@string/desc"
                android:textStyle="italic" />

            <!--Start of question 1-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                android:background="@drawable/question_bg"
                android:orientation="vertical">

                <TextView
                    style="@style/HeaderTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/one" />

                <TextView
                    style="@style/Questions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/question1" />

                <RadioGroup
                    android:id="@+id/question1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/qn1_1"
                        style="@style/Answers"
                        android:text="@string/q_a"
                        android:checked="true"/>

                    <RadioButton
                        android:id="@+id/qn1_2"
                        style="@style/Answers"
                        android:text="@string/q_b" />

                    <RadioButton
                        android:id="@+id/qn1_3"
                        style="@style/Answers"
                        android:text="@string/q_c" />

                    <RadioButton
                        android:id="@+id/qn1_4"
                        style="@style/Answers"
                        android:text="@string/q_d" />
                </RadioGroup>


            </LinearLayout>


            <!--Start of question 2-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                android:background="@drawable/question_bg"
                android:orientation="vertical">

                <TextView
                    style="@style/HeaderTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/two" />

                <TextView
                    style="@style/Questions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/question2" />

                <RadioGroup
                    android:id="@+id/question2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/qn2_1"
                        style="@style/Answers"
                        android:text="@string/q2_a"
                        android:checked="true"/>

                    <RadioButton
                        android:id="@+id/qn2_2"
                        style="@style/Answers"
                        android:text="@string/q2_b" />

                    <RadioButton
                        android:id="@+id/qn2_3"
                        style="@style/Answers"
                        android:text="@string/q2_c" />

                    <RadioButton
                        android:id="@+id/qn2_4"
                        style="@style/Answers"
                        android:text="@string/q2_d" />
                </RadioGroup>

            </LinearLayout><!--End of question 2-->

            <!--Start of question 3-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                android:background="@drawable/question_bg"
                android:orientation="vertical">

                <TextView
                    style="@style/HeaderTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/three" />

                <TextView
                    style="@style/Questions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/question3" />

                <EditText
                    android:id="@+id/question3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/answer_qn3"
                    android:imeOptions="actionDone"
                    android:inputType="textCapWords" />

            </LinearLayout><!--end of question 3-->

            <!--Start of question 4-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                android:background="@drawable/question_bg"
                android:orientation="vertical">

                <TextView
                    style="@style/HeaderTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
