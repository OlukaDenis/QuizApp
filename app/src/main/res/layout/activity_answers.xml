                    android:checked="true"/>

                <CheckBox
                    android:id="@+id/qn6_2"
                    style="@style/Answers"
                    android:text="@string/q6_b" />

                <CheckBox
                    android:id="@+id/qn6_3"
                    style="@style/Answers"
                    android:text="@string/q6_c"
                    android:checked="true"/>

                <CheckBox
                    android:id="@+id/qn6_4"
                    style="@style/Answers"
                    android:text="@string/q6_d"
                    android:checked="true"/>

            </LinearLayout><!--End of question 6-->

            <!--Start of question 7-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                android:background="@drawable/question_bg"
                android:orientation="vertical">

                <TextView
                    style="@style/HeaderTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/seven" />

                <TextView
                    style="@style/Questions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/question7" />

                <EditText
                    android:id="@+id/question7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/answer_qn7"
                    android:imeOptions="actionDone"
                    android:inputType="textCapWords" />

            </LinearLayout><!--End of question 7-->

            <!--Start of question 8-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                android:background="@drawable/question_bg"
                android:orientation="vertical">

                <TextView
                    style="@style/HeaderTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/eight" />

                <TextView
                    style="@style/Questions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/question8" />

                <RadioGroup
                    android:id="@+id/question_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/qn8_1"
                        style="@style/Answers"
                        android:text="@string/q8_a"
                        android:checked="true"/>

                    <RadioButton
                        android:id="@+id/qn8_2"
                        style="@style/Answers"
                        android:text="@string/q8_b" />

                    <RadioButton
                        android:id="@+id/qn8_3"
                        style="@style/Answers"
                        android:text="@string/q8_c" />

                    <RadioButton
                        android:id="@+id/qn8_4"
                        style="@style/Answers"
                        android:text="@string/q8_d" />
                </RadioGroup>

            </LinearLayout><!--End of question 8-->

            <!--Start of question 9-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                android:background="@drawable/question_bg"
                android:orientation="vertical">

                <TextView
                    style="@style/HeaderTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/nine" />

                <TextView
                    style="@style/Questions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/question9" />

                <EditText
                    android:id="@+id/question9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/answer_qn9"
                    android:imeOptions="actionDone"
                    android:inputType="textCapWords" />


            </LinearLayout><!--End of question 9-->

            <!--Start of question 10-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                android:background="@drawable/question_bg"
                android:orientation="vertical">

                <TextView
                    style="@style/HeaderTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/ten" />

                <TextView
                    style="@style/Questions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/question10" />

                <RadioGroup
                    android:id="@+id/question10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/qn10_1"
                        style="@style/Answers"
                        android:text="@string/q10_a" />

                    <RadioButton
                        android:id="@+id/qn10_2"
                        style="@style/Answers"
                        android:text="@string/q10_b"
                        android:checked="true"/>

                </RadioGroup>


            </LinearLayout><!--End of question 10-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--Back button-->
            <Button
                android:id="@+id/reset_questions"
                style="@style/SubmitButons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="getBack"
                android:text="@string/back" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>