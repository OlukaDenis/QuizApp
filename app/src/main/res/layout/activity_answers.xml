                <CheckBox
                    android:id="@+id/qn4_1"
                    style="@style/Answers"
                    android:text="@string/q4_a"
                    android:checked="true"/>

                <CheckBox
                    android:id="@+id/qn4_2"
                    style="@style/Answers"
                    android:text="@string/q4_b"
                    android:checked="true"/>

                <CheckBox
                    android:id="@+id/qn4_3"
                    style="@style/Answers"
                    android:text="@string/q4_c" />

                <CheckBox
                    android:id="@+id/qn4_4"
                    style="@style/Answers"
                    android:text="@string/q4_d" />

            </LinearLayout><!--End of question 4-->

            <!--Start of question 5-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                android:background="@drawable/question_bg"
                android:orientation="vertical">

                <TextView
                    style="@style/HeaderTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/five" />

                <TextView
                    style="@style/Questions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/question5" />

                <RadioGroup
                    android:id="@+id/question5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/qn5_1"
                        style="@style/Answers"
                        android:text="@string/q5_a"
                        android:checked="true"/>

                    <RadioButton
                        android:id="@+id/qn5_2"
                        style="@style/Answers"
                        android:text="@string/q5_b" />

                </RadioGroup>


            </LinearLayout><!--End of question 5-->

            <!--Start of question 6-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_medium"
                android:background="@drawable/question_bg"
                android:orientation="vertical">

                <TextView
                    style="@style/HeaderTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:text="@string/six" />

                <TextView
                    style="@style/Questions"
                    android:layout_width="match_parent"
