                android:textSize="@dimen/text_size_small" />

            <CheckBox
                android:id="@+id/qn6_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginStart="@dimen/margin_medium"
                android:text="@string/q6_d"
                android:textSize="@dimen/text_size_small" />

        </LinearLayout><!--End of question 6-->

        <!--Start of question 7-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:background="@drawable/question_bg"
            android:orientation="vertical">

            <TextView
                style="@style/HeaderTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/seven" />

            <TextView
                style="@style/Questions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/question7"
                android:textSize="@dimen/text_size_medium" />

            <EditText
                android:id="@+id/question7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:text="@string/answer_qn7"
                android:hint="@string/ans"/>

        </LinearLayout><!--End of question 7-->

        <!--Start of question 8-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:background="@drawable/question_bg"
            android:orientation="vertical">

            <TextView
                style="@style/HeaderTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/eight" />

            <TextView
                style="@style/Questions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/question8"
                android:textSize="@dimen/text_size_medium" />

            <CheckBox
                android:id="@+id/qn8_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginStart="@dimen/margin_medium"
                android:text="@string/q8_a"
                android:checked="true"
                android:textSize="@dimen/text_size_small" />

            <CheckBox
                android:id="@+id/qn8_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginStart="@dimen/margin_medium"
                android:text="@string/q8_b"
                android:textSize="@dimen/text_size_small" />

            <CheckBox
                android:id="@+id/qn8_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginStart="@dimen/margin_medium"
                android:text="@string/q8_c"
                android:textSize="@dimen/text_size_small" />

            <CheckBox
                android:id="@+id/qn8_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginStart="@dimen/margin_medium"
                android:text="@string/q8_d"
                android:textSize="@dimen/text_size_small" />

        </LinearLayout><!--End of question 8-->

        <!--Start of question 9-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:background="@drawable/question_bg"
            android:orientation="vertical">

            <TextView
                style="@style/HeaderTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/nine" />

            <TextView
                style="@style/Questions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/question9"
                android:textSize="@dimen/text_size_medium" />

            <EditText
                android:id="@+id/question9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:text="@string/answer_qn9"
                android:hint="@string/ans"/>



        </LinearLayout><!--End of question 7-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small">


            <!--Back button-->
            <Button
                android:id="@+id/answers"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/btn"
                android:onClick="getBack"
                android:padding="@dimen/padding_medium"
                android:text="@string/back"
                android:textColor="@color/qn_bg"
                android:textSize="@dimen/text_size_medium" />

        </LinearLayout>


    </LinearLayout>
</ScrollView>